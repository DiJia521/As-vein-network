<script>
    window.callback = function (res) {
        console.log(res)
        // res（用户主动关闭验证码）= {ret: 2, ticket: null}
        // res（验证成功） = {ret: 0, ticket: "String", randstr: "String"}
        if (res.ret === 0) {   // 票据
        }
    }

    

    //登录功能
    function Login() {
        var name = $("#txtName").val();
        
        var pwd = hex_md5($("#txtPwd").val());
        if (name === null) {
            
        }
        $.ajax({
            url: "https://localhost:44370/api/login/GetLogin",
            data: { "userName": name, "pwd": pwd },
            type: "get",
            contentType: "application/json",
            success: function (data) {
                if (data.length > 0) {
                    alert("登录成功");
                }
                else {
                    alert("用户名或密码错误,请重新输入");
                    location.href = "/Login/Login"
                }
            }
        })
    }

    var s = "";

    //验证码发送
    $(function () {
        $("#verCodeBtn").click(function () {
            var PhoneNum = $("#txtPhone").val();
            $.ajax({
                url: "/Login/SendNET?PhoneNumber=" + PhoneNum,
                success: function (result) {
                    if (result.length > 0) {
                        alert("验证码发送成功");
                        s = result;
                    }
                    else {
                        alert("发送失败");
                    }
                }
            })
        })
    })


    var counts = 60;

    function settime(val) {
        if (counts == 0) {
            val.removeAttribute("disabled");
            val.value = "获取验证码";
            counts = 60;
            return false;
        } else {
            val.setAttribute("disabled", true);
            val.value = "重新发送（" + counts + "）";
            counts--;
        }
        setTimeout(function () {
            settime(val);
        }, 1000);
    }


    //注册
    function Register() {
        if (s == $("#verCode").val()) {

            var obj = new Object();
            obj.U_Name = $("#txtPhone").val();
            obj.U_Pwd = hex_md5($("#Password").val());
            obj.U_Impower = 1;

            $.ajax({
                url: "https://localhost:44370/api/login/PostRegister",
                data: JSON.stringify(obj),
                type: "post",
                contentType: 'application/json;',
                //contentType: "application/x-www-form-urlencoded",
                //accepts: "application/x-www-form-urlencoded",
                //contentType: "application/x-www-form-urlencoded",
                success: function (data) {
                    if (data > 0) {
                        alert("注册成功");
                    }
                    else {
                        alert("失败,请重新注册");
                    }
                }

            })
        }
        else {
            $("#verCode").empty();
            alert("验证码输入有误,请核对后再次填写！");
        }
    }
</script>
