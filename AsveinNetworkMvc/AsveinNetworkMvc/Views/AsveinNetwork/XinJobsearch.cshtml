
@using AsveinNetworkMvc.Models
@model List<CompanyManage>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Single Job Post</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- favicon
    ============================================ -->
    <link rel="shortcut icon" type="image/x-icon" href="~/MoBan/images/favicon.ico">
    <!-- Google Fonts
    ============================================ -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

    <!-- All css files are included here
    ============================================ -->
    <!-- Bootstrap CSS
    ============================================ -->
    <link href="~/MoBan/css/bootstrap.min.css" rel="stylesheet" />
    <!-- This core.css file contents all plugins css file
    ============================================ -->
    <link href="~/MoBan/css/core.css" rel="stylesheet" />
    <!-- Theme shortcodes/elements style
    ============================================ -->
    <link href="~/MoBan/css/shortcode/shortcodes.css" rel="stylesheet" />
    <!-- Color Swithcer CSS
    ============================================ -->
    <link href="~/MoBan/css/plugins/color-switcher.css" rel="stylesheet" />
    <!--  Theme main style
    ============================================ -->
    <link href="~/MoBan/css/style.css" rel="stylesheet" />
    <!-- Color CSS
    ============================================ -->
    <link href="~/MoBan/css/plugins/color.css" rel="stylesheet" />
    <!-- Responsive CSS
    ============================================ -->
    <link href="~/MoBan/css/responsive.css" rel="stylesheet" />
    <!-- Modernizr JS -->
    <script src="~/MoBan/js/vendor/modernizr-2.8.3.min.js"></script>
    <script src="~/assets/js/jquery-3.1.1.js"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        <!--Breadcrumb Banner Area Start-->
        <div class="breadcrumb-banner-area pt-150 bg-3 bg-opacity-black-60">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="breadcrumb-text">
                            <h2 class="text-center text-white uppercase mb-17"> 欢迎来到 </h2>
                            <div class="breadcrumb-bar">
                                <ul class="breadcrumb text-center m-0">
                                    <li class="text-white uppercase ml-15 mr-15"><a href="index.html"> 招聘 </a></li>
                                    <li class="text-white uppercase ml-15 mr-15"> 现场 </li>
                                </ul>
                            </div>
                        </div>
                        <form action="#" method="post">
                            <div class="form-container fix bg-opacity-blue-85 mt-125">
                                <div class="box-select">
                                    <div class="select large">
                                        地点: <input type="text" id="didian" name="address" />
                                    </div>
                                    <div class="select small">
                                        职位: <input type="text" id="zhiwei" name="jobname" />
                                    </div>
                                </div>
                                <button type="submit" class="button-dark pull-right"> 搜索 </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    <!--End of Breadcrumb Banner Area-->
    <!--Start of Job Post Area-->
    <div class="job-post-area ptb-120">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title text-center ">
                        <h2 class="uppercase"> 招聘工作 </h2>
                        <div class="separator mt-35 mb-77">
                            <span><img src="images/icons/1.png" alt=""></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="job-post-container fix">
                        @foreach (var item in Model)
                        {
                            <div class="single-job-post fix">
                                <div class="job-title col-4 pl-30">
                                    <span class="pull-left block mtb-17">
                                        <a href="#"><img src="images/company-logo/1.png" alt=""></a>
                                    </span>
                                    <div class="fix pl-30 mt-29">
                                        <h4 class="mb-5"> @item.C_AvailablePositions </h4>
                                        <h5><a href="#"> 工程师 </a></h5>
                                    </div>
                                </div>
                                <div class="address col-4 pl-50">
                                    <span class="mtb-30 block">
                                        @item.C_NearEstoffice
                                    </span>
                                </div>
                                <div class="time-payment col-2 pl-60 text-center pt-22">
                                    <span class="block mb-6"> @item.C_TypeLabor </span>
                                    <a href="/CompanyManage/jobMessages?name=@item.C_AvailablePositions" class="button button-red" onclick="POSTJob(@item.C_AvailablePositions)"> 查看详情 </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Job Post Area -->
    <!--Start of Job Post Area-->
    <div class="job-post-area pb-120">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title text-center ">
                        <h2 class="uppercase"> 火热工作爆发中... </h2>
                        <div class="separator mt-35 mb-77">
                            <span><img src="images/icons/1.png" alt=""></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="job-post-container fix">
                        <div class="single-job-post fix">
                            <div class="job-title col-4 pl-30">
                                <span class="pull-left block mtb-17">
                                    <a href="#"><img src="images/company-logo/1.png" alt=""></a>
                                </span>
                                <div class="fix pl-30 mt-29">
                                    <h4 class="mb-5"> .Net高级开发 </h4>
                                    <h5><a href="#"> 工程师 </a></h5>
                                </div>
                            </div>
                            <div class="address col-4 pl-50">
                                <span class="mtb-30 block">
                                    上海浦东新区
                                </span>
                            </div>
                            <div class="time-payment col-2 pl-60 text-center pt-22">
                                <span class="block mb-6"> 20K </span>
                                <a href="#" class="button button-red"> 查看详情 </a>
                            </div>
                        </div>
                        <div class="single-job-post fix">
                            <div class="job-title col-4 pl-30">
                                <span class="pull-left block mtb-17">
                                    <a href="#"><img src="images/company-logo/1.png" alt=""></a>
                                </span>
                                <div class="fix pl-30 mt-29">
                                    <h4 class="mb-5"> 区域总经理 </h4>
                                    <h5><a href="#"> 经理 </a></h5>
                                </div>
                            </div>
                            <div class="address col-4 pl-50">
                                <span class="mtb-30 block">
                                    北京市朝阳区
                                </span>
                            </div>
                            <div class="time-payment col-2 pl-60 text-center pt-22">
                                <span class="block mb-6"> 30K </span>
                                <a href="#" class="button button-red"> 查看详情 </a>
                            </div>
                        </div>


                        <div class="single-job-post fix">
                            <div class="job-title col-4 pl-30">
                                <span class="pull-left block mtb-17">
                                    <a href="#"><img src="images/company-logo/1.png" alt=""></a>
                                </span>
                                <div class="fix pl-30 mt-29">
                                    <h4 class="mb-5"> 职业经理人 </h4>
                                    <h5><a href="#"> 经理 </a></h5>
                                </div>
                            </div>
                            <div class="address col-4 pl-50">
                                <span class="mtb-30 block">
                                    深圳经济开发区
                                </span>
                            </div>
                            <div class="time-payment col-2 pl-60 text-center pt-22">
                                <span class="block mb-6"> 45K </span>
                                <a href="#" class="button button-red"> 查看详情 </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Job Post Area -->

</body>
</html>

<script>
    function POSTJob(name) {
        location.href = "/CompanyManage/jobMessages?name=" + name;
    }
</script>
