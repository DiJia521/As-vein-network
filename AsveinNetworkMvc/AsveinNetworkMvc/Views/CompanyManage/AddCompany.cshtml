<body>
    <!--Breadcrumb Banner Area Start-->
    <div class="breadcrumb-banner-area pt-94 pb-85 bg-3 bg-opacity-dark-blue-90">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcrumb-text">
                        <h2 class="text-center text-white uppercase mb-17">Post a job</h2>
                        <div class="breadcrumb-bar">
                            <ul class="breadcrumb text-center m-0">
                                <li class="text-white uppercase ml-15 mr-15"><a href="index.html">Home</a></li>
                                <li class="text-white uppercase ml-15 mr-15">Post a Job</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End of Breadcrumb Banner Area-->
    <!--Start of Single Job Post Area-->
    <div class="single-job-post-area pt-70 mb-120">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <form asp-action="AddCompany" method="post">
                        <div class="single-job-content">
                            <div class="area-title text-center">
                                <h2 class="pt-10 pb-10">请填写发布信息</h2>
                            </div>
                            <div class="title uppercase pt-50 pb-38"></div>
                            <div class="single-job-form">
                                <div class="single-info pb-14">
                                    <label asp-for="C_CheckIndustry" class="uppercase pull-left m-0"></label>
                                    <div class="form-box fix">
                                        <input type="text" id="title" asp-for="C_CheckIndustry" placeholder="行业选择">
                                        <span asp-validation-for="C_CheckIndustry" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="title uppercase pt-20 pb-38"></div>
                                <div class="single-info pb-14">
                                    <label asp-for="C_AvailablePositions" class="uppercase pull-left m-0"></label>
                                    <div class="form-box fix">
                                        <input type="text" id="desc" asp-for="C_AvailablePositions" placeholder="所需职位">
                                        <span asp-validation-for="C_AvailablePositions" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="title uppercase pt-20 pb-38"></div>
                                <div class="single-info pb-14">
                                    <label asp-for="C_TypeLabor" class="uppercase pull-left m-0"></label>
                                    <div class="form-box fix">
                                        <input type="text" id="location" asp-for="C_TypeLabor" placeholder="预计薪资">
                                        <span asp-validation-for="C_TypeLabor" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="title uppercase pt-20 pb-38"></div>
                                <div class="single-info pb-14">
                                    <label asp-for="C_NearEstoffice" class="uppercase pull-left m-0"></label>
                                    <div class="form-box fix">
                                        <input type="text" id="type" asp-for="C_NearEstoffice" placeholder="公司最近地点">
                                        <span asp-validation-for="C_NearEstoffice" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="title uppercase pt-20 pb-38"></div>
                                <div class="single-info">
                                    <label asp-for="C_Name" class="uppercase pull-left m-0"></label>
                                    <div class="form-box fix">
                                        <input type="text" id="date" asp-for="C_Name" placeholder="发布人姓名">
                                        <span asp-validation-for="C_Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="title uppercase pt-20 pb-38"></div>
                            </div>
                            <div class="single-job-form">
                                <div class="single-info mb-14">
                                    <label asp-for="C_CompanyPhone" class="uppercase pull-left m-0"></label>
                                    <div class="form-box fix">
                                        <input type="text" id="company-name" asp-for="C_CompanyPhone" placeholder="公司电话">
                                        <span asp-validation-for="C_CompanyPhone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="title uppercase pt-20 pb-38"></div>
                                <div class="single-info mb-14">
                                    <label asp-for="C_EmailAddress" class="uppercase pull-left m-0"></label>
                                    <div class="form-box fix">
                                        <input type="text" id="company-website" asp-for="C_EmailAddress" placeholder="公司邮箱">
                                        <span asp-validation-for="C_EmailAddress" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="title uppercase pt-20 pb-38"></div>
                                <div class="single-info mb-14 fix">
                                    <label asp-for="C_JobRequirements" class="uppercase pull-left m-0"></label>
                                    <div class="desc fix">
                                        <textarea asp-for="C_JobRequirements" class="fix textarea" cols="30" rows="10" placeholder="职位要求"></textarea>
                                        <span asp-validation-for="C_JobRequirements" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="title uppercase pt-20 pb-38"></div>
                                <div class="single-info mb-14">
                                    <label asp-for="C_CompanyName" class="uppercase pull-left m-0"></label>
                                    <div class="form-box fix">
                                        <input type="text" id="website" asp-for="C_CompanyName" placeholder="公司名称">
                                        <span asp-validation-for="C_EmailAddress" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="title uppercase pt-20 pb-38"></div>
                                <div class="ml-160 mt-38">
                                    @*<a href="#" class="button button-large-box">Preview</a>*@
                                    <input id="Submit1" type="submit" class="button button-large-box" value="确认您的订单" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--End of Single Job Post Area-->
